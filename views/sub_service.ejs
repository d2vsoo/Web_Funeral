    <script src="/js/main.js" type="text/javascript"></script>
    <script>

        // 초기 설정하기 - box01만 block으로 설정하기
        document.querySelector('.servicebox01').style.display = 'block';
        // 나머지 box는 none으로 설정하기
        for (let i = 2; i <= 4; i++) {
            document.querySelector(`.servicebox0${i}`).style.display = 'none';
        }

        // title 클릭할 때, 그에 맞는 box 보이도록 하기
        // 나머지 박스는 숨기기
        for (let i = 1; i <= 4; i++) {
            const box = document.querySelector(`.servicebox0${i}`);
            const button = document.querySelector(`.serviceTitle0${i}`);

            button.addEventListener('click', function () {

                // 나머지 박스 숨기기
                for (let j = 1; j <= 4; j++) {
                    document.querySelector(`.servicebox0${j}`).style.display = 'none';
                }
                // i에 해당하는 box만 보이도록 하기
                box.style.display = 'block';
            });
        }
    </script>
